#include "shell.h"

int find_file(char *dir_name, char *file_name) {
    int x = 0;
    struct dirent *entry;
    DIR *dir;

    dir = opendir(dir_name);
    if (dir == NULL) {
        perror("opening directory");
        return x;
    }

    while ((entry = readdir(dir)) != NULL) {
        if (strcmp(entry->d_name, file_name) == 0) {
            x = 1;
            break;
        }
    }

    closedir(dir);
    return x;
}

